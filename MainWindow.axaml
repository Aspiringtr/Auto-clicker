
<Window xmlns="https://github.com/avaloniaui"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Autoclicker.MainWindow"
		Background="#0E1628"
		Width="200"
		Height="200"
		CornerRadius="8"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="15"
        CanResize="False">
	<Window.Styles>
		<Style Selector="Button">
			<Setter Property="Grid.ColumnSpan" Value="3"/>
			<Setter Property="Grid.Column" Value="1"/>
		</Style>
		<Style Selector="ButtonSpinner">
			<Setter Property="Grid.ColumnSpan" Value="3"/>
			<Setter Property="Grid.Column" Value="1"/>
		</Style>
		<Style Selector="TextBlock">
			<Setter Property="Grid.Column" Value="3"/>
			<Setter Property="Grid.ColumnSpan" Value="2"/>
		</Style>
	</Window.Styles>
	
	<Grid ColumnDefinitions="30,*,*,*,30" RowDefinitions="50,*,*,*,*,*" RowSpacing="">
		<TextBlock Foreground="White" FontWeight="Bold" FontSize="22" Text="Click Bot" Grid.Column="0" Grid.ColumnSpan="5" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
		<Button Grid.Row="1" HorizontalAlignment="Stretch" TextBlock.TextAlignment="Center">Capture position</Button>
		<ButtonSpinner Grid.Row="2" Content="Delay"></ButtonSpinner>
		<ButtonSpinner Grid.Row="3" Content="Clicks"></ButtonSpinner>
		<ButtonSpinner Grid.Row="4" Content="Times"></ButtonSpinner>
	</Grid>
</Window>
