
<Window xmlns="https://github.com/avaloniaui"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Autoclicker.MainWindow"
		Background="#0E1628"
		Width="200"
		Height="200"
		CornerRadius="8"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="15"
        CanResize="False">
	<Grid ColumnDefinitions="30,*,*,*,30" RowDefinitions="50,*,*,*,*,*" RowSpacing="">
		<TextBlock Foreground="White" FontWeight="Bold" FontSize="22" Text="Auto clicker" Grid.Column="0" Grid.ColumnSpan="5" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
		<Button Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" TextBlock.TextAlignment="Center">Capture position</Button>
		<ButtonSpinner Grid.Row="2" Height="10" Content="delay"></ButtonSpinner>
		<ButtonSpinner Grid.Row="3" Height="10" Content="clicks"></ButtonSpinner>
		<ButtonSpinner Grid.Row="4" Height="10" Content="times"></ButtonSpinner>
	</Grid>
</Window>
